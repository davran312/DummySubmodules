<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="?android:selectableItemBackground"
    tools:ignore="UseCompoundDrawables"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:orientation="horizontal"
    tools:padding="16dp"
    tools:parentTag="android.widget.LinearLayout">

    <namba.wallet.nambaone.uikit.widget.ImageWithPlaceholderView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:background="@drawable/background_disabled_on_primary_circle"
        app:placeholderDrawable="@drawable/ic_placeholder_avatar"
        app:placeholderTint="?colorPrimary"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        style="@style/AppTheme.Label.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="@string/profile_choose_photo" />

</merge>