<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    tools:background="@drawable/background_secondary_rounded_button"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/textView"
        style="@style/AppTheme.Label.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        app:drawableTint="?colorHighEmphasisOnSecondary"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/color_state_secondary_he_enable"
        tools:ignore="UnusedAttribute"
        tools:text="Перевести деньги" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:progressTint="?colorSecondary"
        android:visibility="gone"
        tools:visibility="visible" />
</merge>