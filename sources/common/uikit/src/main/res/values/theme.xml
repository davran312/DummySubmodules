<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppBase.v21" />

    <style name="AppBase.v21" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorHighEmphasisOnPrimary">@color/highEmphasisOnPrimary</item>
        <item name="colorMediumEmphasisOnPrimary">@color/mediumEmphasisOnPrimary</item>
        <item name="colorFootnotesOnPrimary">@color/footnotesOnPrimary</item>
        <item name="colorDisabledOnPrimary">@color/disabledOnPrimary</item>
        <item name="colorErrorOnPrimary">@color/errorOnPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryLight">@color/secondaryLight</item>
        <item name="colorSecondaryDark">@color/secondaryDark</item>

        <item name="colorHighEmphasisOnSecondary">@color/highEmphasisOnSecondary</item>
        <item name="colorMediumEmphasisOnSecondary">@color/mediumEmphasisOnSecondary</item>
        <item name="colorDisabledOnSecondary">@color/disabledOnSecondary</item>

        <item name="colorControlHighlight">@color/ripple</item>

        <item name="colorApply">@color/apply</item>
        <item name="colorAlertBackground">@color/alertBackground</item>
        <item name="colorMessage">@color/message</item>

        <item name="colorAccent">?colorSecondary</item>
        <item name="colorControlActivated">?colorSecondary</item>
        <item name="colorControlNormal">?colorDisabledOnPrimary</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- fix blue text for come Lollipop devices -->
        <!-- https://stackoverflow.com/questions/45196244/android-textcolor-ignored-in-androidtextappearance-of-the-edittext -->
        <item name="android:editTextColor">?colorHighEmphasisOnPrimary</item>
        <item name="android:textColor">?colorHighEmphasisOnPrimary</item>
        <item name="android:actionMenuTextColor">?colorSecondary</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents">
        <item name="theme">@style/Widget.MaterialComponents.Chip.Entry</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorDisabledOnSecondary">@color/disabledOnSecondary</item>
    </style>

    <style name="AppTheme.BottomSheet.Rounded" parent="AppTheme.BottomSheet.Rounded.v21" />

    <style name="AppTheme.BottomSheet.Rounded.v21" parent="Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="bottomSheetStyle">@style/AppRoundCornersModalStyle</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@drawable/background_primary_rounded</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:maxWidth">328dp</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?colorHighEmphasisOnPrimary</item>
        <item name="android:textColorSecondary">?colorMediumEmphasisOnPrimary</item>
    </style>

    <style name="DatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">?attr/colorMediumEmphasisOnPrimary</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/highEmphasisOnPrimary</item>
        <item name="android:colorControlNormal">@color/mediumEmphasisOnPrimary</item>
        <item name="lineHeight">1dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>