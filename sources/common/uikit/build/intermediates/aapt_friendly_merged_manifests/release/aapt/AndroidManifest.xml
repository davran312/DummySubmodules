<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="namba.wallet.nambaone.uikit" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="29" />

    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application>
        <activity
            android:name="namba.wallet.nambaone.uikit.camera.ui.CameraActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="namba.wallet.nambaone.uikit.picker.MediaGalleryActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="namba.wallet.nambaone.uikit.picker.preview.PreviewActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
    </application>

</manifest>