<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <namba.wallet.nambaone.uikit.widget.ImageWithPlaceholderView
        android:id="@+id/rowItemImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_primary_rounded_stroke"
        app:placeholderDrawable="@drawable/ic_service" />
    <TextView
        android:id="@+id/rowItemTopTextView"
        style="@style/AppTheme.Label.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rowItemImageView"
        tools:text="Северэлектро" />

    <TextView
        android:id="@+id/rowItemBottomTextView"
        android:layout_width="wrap_content"
        style="@style/AppTheme.Label.Caption"
        app:layout_constraintTop_toBottomOf="@id/rowItemTopTextView"
        android:textColor="?colorMediumEmphasisOnPrimary"
        app:layout_constraintBottom_toBottomOf="@id/rowItemImageView"
        app:layout_constraintStart_toStartOf="@id/rowItemTopTextView"
        tools:text = "+995 555 15 87 63"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/rowItemImageView" />

</merge>