<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_activated="true">
                <color android:color="@color/media_picker_item_background_activated" />
            </item>
            <item android:state_focused="true">
                <color android:color="@color/media_picker_item_background_focused" />
            </item>
            <item>
                <color android:color="@color/media_picker_item_background_normal" />
            </item>
        </selector>
    </item>
    <item android:drawable="?attr/selectableItemBackground" />
</layer-list>